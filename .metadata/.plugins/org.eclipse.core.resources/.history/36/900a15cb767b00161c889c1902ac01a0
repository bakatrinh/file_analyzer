package file_analyzer;

import java.awt.EventQueue;

import javax.swing.JFrame;
import javax.swing.JButton;
import javax.swing.JTextArea;
import java.awt.BorderLayout;
import java.awt.Component;
import javax.swing.Box;

public class FileAnalyzer {
	public static void main(String[] args){
		EventQueue.invokeLater(new Runnable() {
			public void run() {
				FileAnalyzerView _view = new FileAnalyzerView();
				FileAnalyzerController _controller = new FileAnalyzerController(_view);
				_view.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
				_view.pack();
				_view.setResizable(true);
				_view.setLocationRelativeTo(null);
				
				JButton btnOpenFile = new JButton("Open File");
				_view.getBottomPanel().add(btnOpenFile);
				
				JButton btnSaveOutput = new JButton("Save Output");
				_view.getBottomPanel().add(btnSaveOutput);
				
				JButton btnCopyToClipboard = new JButton("Copy to Clipboard");
				_view.getBottomPanel().add(btnCopyToClipboard);
				
				JButton btnExit = new JButton("Exit");
				_view.getBottomPanel().add(btnExit);
				
				JTextArea textArea = new JTextArea();
				textArea.setRows(10);
				_view.getMainCenterScreen().add(textArea, BorderLayout.CENTER);
				
				Component horizontalStrut = Box.createHorizontalStrut(20);
				_view.getMainCenterScreen().add(horizontalStrut, BorderLayout.WEST);
				
				Component horizontalStrut_1 = Box.createHorizontalStrut(20);
				_view.getMainCenterScreen().add(horizontalStrut_1, BorderLayout.EAST);
				
				Component verticalStrut = Box.createVerticalStrut(20);
				_view.getMainCenterScreen().add(verticalStrut, BorderLayout.NORTH);
				
				Component verticalStrut_1 = Box.createVerticalStrut(20);
				_view.getMainCenterScreen().add(verticalStrut_1, BorderLayout.SOUTH);
				_view.setVisible(true);
			}
		});
	}
}
